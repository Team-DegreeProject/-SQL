//where语句
void where() :
{Token t;}
{
    t = <WHERE>
    {   saveTokenInSQL(t);   }


    multiCondition()
    (orderBy() | groupBy())?
}

// 多条件并列的时候
void multiCondition() :
{
    Token t;
    int i = 0;// i = 0 表示只有一个condition；=1 表示有多个condition
    list = new ArrayList<Object>();
     ArrayList<Object> temp = new ArrayList<Object>();
}
{

 (
    //好多个小条件
    temp = condition()
    |
    "(" condition() ")"
 )

 (
    // 和或并好多个小条件
    (     t = <AND>  {   saveTokenInList(t,list); i = 1; }
        | t = <OR>   {   saveTokenInList(t,list); i = 1;}
    )

    (
        condition() | "(" condition() ")"
    )
 )*
    {
        if( i == 0)
        {
           list = temp;
           saveListInSQL(list);
           System.out.println("Only one condition");
        }
        else
        {
           saveListInSQL(list);
        }
    }

}

//小情况；小条件
ArrayList<Object> condition() :
{
    Token t;
    ArrayList<Object> templist = new ArrayList<Object>();
}
{
 name(templist)
 (
    //加减乘除+right   // between & and
    simpleCondition(templist)|betweenCondition()
 )
 {return templist;}
}

void name(List<Object> tl) :
{
    Token t;
    List<Object> templist = tl;
}
{
 t = <ID>
 {
    saveTokenInList(t,templist);
 }

}

//简单条件
void simpleCondition(List<Object> tl) :
{Token t;
List<Object> templist = tl;
}
{
    //判断条件
    (t = <EQ>       {   saveTokenInList(t,templist);   }    |   t =  <GT> {   saveTokenInList(t,templist);   }
    |t =  <LT>      {   saveTokenInList(t,templist);   }    |   t =  <NE> {   saveTokenInList(t,templist);   }
    |t =  <LIKE>    {   saveTokenInList(t,templist);   })
    rightCondition(templist)
}

void rightCondition(List<Object> tl) :
{Token t;
List<Object> templist = tl;
}
{
    // “/” ，数字，功能
      t = <STRING>
          {
              saveTokenInList(t,templist);
              saveTempListInList(templist,list);

          }
    | t = <NUMBER>
          {
               saveTokenInList(t,templist);
               saveTempListInList(templist,list);
          }

    | function(templist)
}

//功能方法
void function(List<Object> tl) :
{Token t;
List<Object> templist = tl;
}
{
    //  id (（多）参数 )
     t = <ID>
     {
        saveTokenInList(t,templist);
        saveTempListInList(templist,list);
     }
     (<LBRACKET> arguments() <RBRACKET>)?
}

